<!-- views/register.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Registration</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
  <div class="w-full h-screen bg-zinc-900 text-white px-3 py-2">
  <h1 class="text-4xl mb-6">Register Here</h1>
  <form class="grid grid-cols-1 w-72" action="/register" method="POST">
      <input class="mb-2 bg-transparent rounded-md border-2 px-2 py-1" type="text" placeholder="Username" name="username" required>
      <input class="mb-2 bg-transparent rounded-md border-2 px-2 py-1" type="text" placeholder="Email" name="email" required>
      <input class="mb-2 bg-transparent rounded-md border-2 px-2 py-1" type="password" placeholder="Password" name="password" required>
    <button class="bg-red-600 px-3 py-1 rounded-md" type="submit">Register</button>
  </form>
  </div>
</body>
</html>
